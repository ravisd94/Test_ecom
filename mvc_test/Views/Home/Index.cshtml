@*@model mvc_test.Models.Product*@
@model IEnumerable<mvc_test.Models.Product>
@{
    ViewBag.Title = "Index";
}

<div class="row" id="trending_home">
    <div class="container-fluid mb-5 mt-5">
        <img src="https://marriedwiki.com/uploads/2019/06/17/david-1560761329.jpg" class="justify-content-center" />
    </div>
</div>

<div class="row">
    @foreach(var item in Model)
    {
    <div class="col-md-4 col-lg-3 col-sm-6 col-6">
        <div class="product-grid">
            <div class="product-image">
                <a href="#" class="image">
                    <img class="pic-1" src=@item.prod_image>
                </a>
                <span class="product-discount-label">@item.prod_sale%</span>
                <ul class="product-links">
                    @*<li><a href="#" data-tip="Add to Wishlist"><i class="fas fa-heart"></i></a></li>*@
                    <li><a href="#" data-tip="Add to Wishlist"><img class="justify-content-center align-self-start" src="https://cdn3.iconfinder.com/data/icons/marketing-e-commerce/128/icons_-_marketing-41-512.png" alt="" /></a></li>
                    @*<li><a href="#" data-tip="Compare"><i class="fa fa-random"></i></a></li>*@
                    @*<li><a href="#" data-tip="Quick View"><i class="fa fa-search"></i></a></li>*@
                </ul>
            </div>
            <div class="product-content">
                @*<ul class="rating">
            <li class="fas fa-star"></li>
        </ul>*@
                <h3 class="title"><a href="#">Men's Blazer</a></h3>
                <div class="price"><span>$90.00</span> $@item.prd_price.ToString()</div>
                <form method="post" id="ForgotPassword" action="~/Views/Home/ProductDetails.cshtml">
                    <input type="button" class="add-to-cart" value="Add to Cart" />
                </form>
               @* <a class="add-to-cart" href="">add to cart</a>*@
            </div>
        </div>
    </div>
    }
</div>

